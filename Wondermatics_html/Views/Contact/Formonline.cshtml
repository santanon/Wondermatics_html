                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="title-form" for="detail">รายละเอียด</label>
                                    <textarea class="form-textarea" id="detail" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label class="title-form" for="name">ชื่อ</label>
                                    <textarea class="form-control" id="name" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label class="title-form" for="lastname">นามสกุล</label>
                                    <textarea class="form-control" id="name" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label class="title-form" for="tel">เบอร์โทรศัพท์</label>
                                    <textarea class="form-control" id="tel" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label class="title-form" for="mail">อีเมล</label>
                                    <textarea class="form-control" id="mail" rows="5"></textarea>
                                </div>
                            </div>

                            <div class="col-12">
                                <button class="btn btn--primary">
                                    <span class="text">ส่งข้อมูล</span>
                                    <span class="icon"><i class="bi bi-arrow-right-short"></i></span>
                                </button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>